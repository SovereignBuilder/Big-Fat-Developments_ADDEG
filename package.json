{
  "name": "addeg",
  "version": "0.1.0",
  "description": "Automatic Dev-Diary Entry Generator (config-driven, local-first CLI).",
  "license": "MIT",
  "type": "module",
  "main": "dist/electron/main.js",
  "bin": {
    "addeg": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "presets",
    "addeg.config.example.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-assets.js",
    "dev": "node --enable-source-maps dist/cli.js",
    "prepack": "npm run build",
    "start": "electron .",
    "app:dev": "concurrently \"tsc -w\" \"electron .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "node -c dist/cli.js"
  },
  "build": {
    "appId": "com.addeg.app",
    "productName": "ADDEG Dev Diary",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "commander": "^12.1.0",
    "fastify": "^5.6.2",
    "open": "^11.0.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.6.3"
  }
}
